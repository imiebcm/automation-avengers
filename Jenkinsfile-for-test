pipeline {
  agent {
    docker {
      image 'python:3.5.1'
    }
  }
  stages {
    stage ('Build') {
      steps {
        sh 'python -m py_compile src/app.py'
      }
    }
    stage ('Test') {
      steps {
        sh 'python --junit-xml test-reports/results.xml tests/test_apps.py'
      }
      post {
        always {
          xunit 'test-reports/results.xml'
        }
      }
    }
  }
}