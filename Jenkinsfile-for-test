pipeline {
  agent {
    docker {
      image 'python:3.11'
    }
  }
  stages {
    stage ('Build') {
      steps {
        sh 'python -m py_compile src/app.py'
      }
    }
    
    stage ('Test') {
      steps {
        sh 'py.test --junit-xml test-reports/results.xml test_apps.py'
      }
      post {
        always {
          xunit 'test-reports/results.xml'
        }
      }
    }
    /*
    stage ('Test') {
      steps {
        sh 'python test_apps.py'
      }
    }
    */
  }
}