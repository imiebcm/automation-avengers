pipeline {

    environment {
    dockerimagename = "python:3.11"
    dockerImage = ""
  }

  agent any

  stages {
        stage('Install Dependencies') {
            steps {
                sh '''
                python -m venv devenv
                source devenv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                source devenv/bin/activate
                python -m unittest discover -s tests\test_apps.py
                '''
            }
        }
  }
  
}